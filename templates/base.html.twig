    <a class="navbar-brand" href="{{ app.url_generator.generate('home') }}">Smart Directory</a>
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ app.url_generator.generate('home') }}">Home</a>
        </li>
    </ul>
</nav>

{% block body %}
{% endblock body %}

