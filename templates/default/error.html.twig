{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url("https://fonts.googleapis.com/css?family=VT323");

        :root {
            --width: 280px;
            --height: 180px;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
        }

        .footer-wrapper {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            line-height: 60px;
        }
    </style>
{% endblock %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div id="spaghetti-error" data-text="Oh no! Our spaghetti code is not working properly. We will be back soon!">
            <div class="spaghetti">
                <div class="fork"></div>
                <div class="meat"></div>
                <div class="pasta"></div>
                <div class="plate"></div>
            </div>
        </div>
    </div>
{% endblock %}

