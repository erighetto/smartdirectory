{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1>
                <a href="{{ app.url_generator.generate('level1',{"cat1":parent.name|lower|replace({' ': "-"})~"-"~parent.cid}) }}">{{ parent.name }}</a>
                -
                {{ actual.name }}
            </h1>
            <ul class="list-group">
                {% for item in children %}
                    <li class="list-group-item">
                        <a href="{{ app.url_generator.generate('level3',{
                            "cat1":parent.name|lower|replace({' ': "-"})~"-"~parent.cid,
                            "cat2":actual.name|lower|replace({' ': "-"})~"-"~actual.cid,
                            "cat3":item.name|lower|replace({' ': "-"})~"-"~item.cid,
                        }) }}">
                            {{ item.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for link in links %}
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title"><a href="{{ link.url }}" target="_blank">{{ link.title|raw }}</a></h4>
                            <p class="card-text">{{ link.description|raw }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}